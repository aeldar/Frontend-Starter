{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@starter/data-access": ["libs/data-access/src/index.ts"],
      "@starter/env": ["libs/env/src/index.ts"],
      "@starter/feature-account": ["libs/feature/account/src/index.ts"],
      "@starter/feature-admin-products": ["libs/feature/admin-products/src/index.ts"],
      "@starter/feature-admin-users": ["libs/feature/admin-users/src/index.ts"],
      "@starter/feature-cart": ["libs/feature/cart/src/index.ts"],
      "@starter/feature-impersonation": ["libs/feature/impersonation/src/index.ts"],
      "@starter/feature-products": ["libs/feature/products/src/index.ts"],
      "@starter/model": ["libs/model/src/index.ts"],
      "@starter/ui/common": ["libs/ui/common/src/index.ts"],
      "@starter/ui/shell": ["libs/ui/shell/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
